<mvc:View controllerName="com.employeeinfo.controller.EmployeeTable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
    <content>
     <Table
        id="empTable"
        items="{/employees}"
        inset="false">

        <columns>
            <Column><Text text="Employee Name"/></Column>
            <Column><Text text="Designation"/></Column>
            <Column><Text text="Date of Joining"/></Column>
            <Column><Text text="Salary"/></Column>
            <Column><Text text="Location"/></Column>
            <Column><Text text="Experience Level"/></Column>
            <Column><Text text="Revised Salary"/></Column>
            
        </columns>

        <items>
            <ColumnListItem>
                <cells>

                    <!-- Name -->
                    <Text text="{name}" />

                    <!-- Designation -->
                    <Text text="{designation}" />

                    <!-- Formatter: Date -->
                    <Text text="{path: 'dateOfJoining', formatter: '.formatter.formatDate'}"/>
                    <!-- <Text text="{path: 'dateOfJoining'}"/> -->

                    <!-- Expression Binding: Salary + Color -->
                 <ObjectStatus
    text="{= 'â‚¹ ' + ${currentSalary} / 100000 + ' LPA' }"
    state="{= ${currentSalary} &gt; 900000 ? 'Success' : 'Warning' }"/>

                    <!-- Base Location -->
                    <Text text="{baseLocation}" />
                    

                    <!-- Expression Binding: Experience -->
                  <Text text="{= ${dateOfJoining} &lt; '2019-01-01' ? 'Senior' : 'Junior' }"/>
                  <!-- <Text text="{path: 'currentSalary'}"/> -->

                  <Text text="{path: 'currentSalary', formatter: '.formatter.calculateHike'}"/>

                </cells>
            </ColumnListItem>
        </items>
    </Table>

    </content>
    <footer>
        <Toolbar>
            <ToolbarSpacer />

            <Button
                text="{= ${ui>/editMode} ? 'Save' : 'Edit' }"
                type="{= ${ui>/editMode} ? 'Emphasized' : 'Default' }"
                press=".onEditSavePress"/>
        </Toolbar>
    </footer>
    </Page>
</mvc:View>